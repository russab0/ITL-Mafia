<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.kpfu.itlmafia.AboutActivity"
    android:background="#000000"
    android:onClick="onClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ITL MAFIA"
        android:textSize="70dp"
        android:id="@+id/textViewAppNameAbout"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITL MAFIA"
        android:id="@+id/textView3"
        android:layout_below="@+id/textViewAppNameAbout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright © 2016"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Алексей Соловьев - дизайн и разработка карт"
        android:id="@+id/textViewAlex"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:clickable="true"
        android:phoneNumber="false"
        android:textStyle="italic"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Руслан Сабиров - дизайн и разработка приложения"
        android:id="@+id/textViewRuslan"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_below="@+id/textViewAlex"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:clickable="true"
        android:phoneNumber="false"
        android:textStyle="italic" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:id="@+id/buttonBack"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:background="@drawable/redstroke"
        android:textSize="24dp"
        android:onClick="onClick"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v. 1.5.7"
        android:id="@+id/textViewReview"
        android:textColor="@color/primary_dark_material_light"
        android:onClick="onClick"
        android:linksClickable="false"
        android:clickable="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="fill_horizontal|center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/buttonBack"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
