<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.kpfu.itlmafia.LeaderActivity"
    android:background="@color/colorBlack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="СПИСОК ИГРОКОВ"
        android:textSize="45dp"
        android:id="@+id/textViewPlayersList"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewPlayers"
        android:choiceMode="none"
        android:stackFromBottom="false"
        android:background="@drawable/redstroke"
        android:layout_below="@+id/textViewPlayersList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonPlayingRole"
        android:layout_marginBottom="12dp" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageButtonInfo"
        android:src="@drawable/ic_info_black_24dp"
        android:background="@drawable/redstroke"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButtonFlash"
        android:layout_toEndOf="@+id/imageButtonFlash"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageButtonExit"
        android:src="@drawable/ic_exit_to_app_black_24dp"
        android:background="@drawable/redstroke"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_height="45dp"
        android:id="@+id/imageButtonFlash"
        android:src="@drawable/ic_flashlight"
        android:background="@drawable/redstroke"
        android:onClick="onClick"
        android:layout_width="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageButtonNext"
        android:src="@drawable/ic_forward_black_24dp"
        android:background="@drawable/redstroke"
        android:onClick="onClick"
        android:layout_marginRight="3dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButtonExit"
        android:layout_toStartOf="@+id/imageButtonExit"
        android:layout_marginEnd="3dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_height="45dp"
        android:text="ITL MAFIA"
        android:id="@+id/buttonPlayingRole"
        android:textColor="#000000"
        android:background="@drawable/redstroke"
        android:textStyle="bold"
        android:layout_width="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
