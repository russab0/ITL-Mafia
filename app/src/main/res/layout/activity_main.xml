<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.kpfu.itlmafia.MainActivity"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:textSize="70dp"
        android:id="@+id/textViewAppNameMain"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:typeface="normal"
        android:gravity="center" />


    <Button
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="Начать игру"
        android:id="@+id/buttonStartGame"
        android:textStyle="bold"
        android:onClick="onClick"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/buttonAbout"
        android:layout_marginTop="40dp"
        android:background="@drawable/redstroke"
        android:layout_alignRight="@+id/buttonHelp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"/>

    <Button
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="Справка"
        android:id="@+id/buttonHelp"
        android:textStyle="bold"
        android:onClick="onClick"
        android:layout_below="@+id/buttonStartGame"
        android:layout_alignLeft="@+id/buttonAbout"
        android:layout_alignRight="@+id/buttonAbout"
        android:background="@drawable/redstroke"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:text="О программе"
        android:id="@+id/buttonAbout"
        android:textStyle="bold"
        android:onClick="onClick"
        android:background="@drawable/redstroke"
        android:textColor="#000000"
        android:layout_below="@+id/buttonHelp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <Button
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:id="@+id/buttonExit"
        android:textStyle="bold"
        android:onClick="onClick"
        android:background="@drawable/redstroke"
        android:textColor="#000000"
        android:layout_below="@+id/buttonAbout"
        android:layout_alignLeft="@+id/buttonAbout"
        android:layout_alignStart="@+id/buttonAbout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

</LinearLayout>
